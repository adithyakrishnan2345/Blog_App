<!DOCTYPE html>
<html>
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width,initial-scale=1.0">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title><i>BLOG SITE</i></title>
      <style>
        .choices{
          float: left;
          margin-right:4%;
          border: 0px;
          background-color: white;
        }
      </style>
    </head>
    <body>
      <div style="padding: 1.5em;">
        <ul>
        <li style="list-style-type:none;">
          <button class="choices">Home</button>
          <button class="choices">Food</button>
          <button class="choices">Tech</button>
          <button class="choices">Travel</button>
          <button class="choices">Health</button>
          <button class="choices">Education</button>
          <button class="choices">Combat Sports</button>
          <form action="/articles/login" method="GET"><button type="submit" class="btn btn-primary" style="float:right;">Login</button></form>
        
        </li>
       </ul>
      </div>
   <div class="container">
    <h1 class="mb-4" style="font-family:cursive">BLOG SITE</h1>
    <div style="display: inline-block;margin-bottom: 3%;width: 50%;">
    <div style="display: inline-block;margin: 4%;">
     <label>Select a topic:</label>
      <select name="Topic" id="Topic">
       <option>Health</option>
       <option>Food</option>
       <option>Education</option>
       <option>Tech</option>
       <option>Sports</option>
     </select>
    </div>
  <div style="display: inline-block;margin: 6%;">
     <label>Sort By:</label>
     <select name="Order" id="Order">
      <option>Newest</option>
      <option>Oldest</option>
      <option>Most popular</option>

     </select>
    </div>
    </div>
    <div><a href="/articles/new" class="btn btn-success" >New Article</a></div>    
  <% articles.forEach(article => { %>
    <div style="display: inline-block;">
  <div class="card mt-4" style="max-width: 400px;">
    <div class="card-body">
        <h4 class="card-title"><%= article.title %></h4>
        <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
        </div>
        <div class="card-text mb-2"><%= article.description %></div>
        <a href="articles/<%= article.slug %>" class="btn btn-primary" >Read More</a>
        <a href="articles/edit/<%= article.id %>" class="btn btn-info ">Edit</a>
        <form action = "/articles/<%= article.id %>?_method=DELETE" class="d-inline" method="POST">
          <button type="submit" class="btn btn-danger ">Delete Article</button>
        </form>    
      </div>
  </div>
    </div>
 <%  }) %>
</div>
    </body>
</html>